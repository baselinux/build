#!/bin/bash

set -e  # Exit on error

cd ${CURDIR}
unzip python-cmake-buildsystem.zip

mv python-cmake-buildsystem ${TARGET_DIR}
cd "${TARGET_DIR}/python-cmake-buildsystem"

cmake -DCMAKE_INSTALL_PREFIX:PATH=${INSTALL_DIR} -DBUILD_EXTENSIONS_AS_BUILTIN=ON -DWITH_STATIC_DEPENDENCIES=ON .

make -j$(nproc)
make install